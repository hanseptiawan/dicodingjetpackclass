<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <item name="android:textColorPrimary">@color/white_high</item>

        <item name="android:statusBarColor">@color/elevation4</item>
        <item name="android:navigationBarColor">@color/elevation0</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

<!--    COMPONENTS STYLE-->

    <style name="til_filled_search_view" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">none</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="endIconTint">@color/white_medium</item>
        <item name="startIconTint">@color/white_medium</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="til_themes_search_view" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="colorControlHighlight">@color/transparent</item>
    </style>

    <style name="tv_header.strong" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_high</item>
        <item name="android:textSize">@dimen/text_header_24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_sub_header.medium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_medium</item>
        <item name="android:textSize">@dimen/text_sub_header_18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_sub_header.strong" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_high</item>
        <item name="android:textSize">@dimen/text_sub_header_18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_title.accent" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_title_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_title.strong" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_high</item>
        <item name="android:textSize">@dimen/text_title_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_subtitle.medium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_medium</item>
        <item name="android:textSize">@dimen/text_subtitle_14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_subtitle.accent" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_subtitle_14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_subtitle.strong" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_high</item>
        <item name="android:textSize">@dimen/text_subtitle_14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_subtitle.clickable.accent" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_subtitle_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tv_contents.medium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_medium</item>
        <item name="android:textSize">@dimen/text_contents_12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_contents.strong" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_high</item>
        <item name="android:textSize">@dimen/text_contents_12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_captions.medium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_medium</item>
        <item name="android:textSize">@dimen/text_captions_10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_captions.strong" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_high</item>
        <item name="android:textSize">@dimen/text_captions_10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
